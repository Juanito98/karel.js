{
  "name": "karel.js",
  "version": "0.2.0",
  "description": "Compilador y evaluador de Karel en javascript",
  "scripts": {
    "start": "electron index.js",
    "test": "echo \"Error: no test specified\" && exit 1",

    "clean": "rm -rf ./dist",
    "clean:win": "rm -rf ./dist/win",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:linux": "rm -rf ./dist/linux",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . \"karel.js\" --out=dist/osx --platform=darwin --arch=x64 --version=0.36.1 --icon=img/osx_icon.icns",
    "pack:win": "npm run clean:win && electron-packager . \"karel.js\" --out=dist/win --platform=win32 --arch=ia32 --version=0.36.1 --icon=img/win_icon.ico",

    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/karel.js.app\" --platform=osx --out=\"dist/osx\"",
    "build:win": "npm run pack:win && electron-builder \"dist/win/karel.js-win32\" --platform=win --out=\"dist/win\""
  },
  "builder": {
    "osx" : {
      "title": "karel.js",
      "icon": "img/osx_icon.icns",
      "icon-size": 80,
      "contents": [
        { "x": 438, "y": 344, "type": "link", "path": "/Applications" },
        { "x": 192, "y": 344, "type": "file" }
      ]
    },
    "win" : {
      "title" : "karel.js",
      "version" : "0.1.0",
      "publisher": "omegaUp",
      "icon" : "img/win_icon.ico",
      "verbosity": 1
    },
    "linux" : {
      "arch" : 64,
      "target" : "deb",
      "version" : "0.1.0",
      "title" : "karel.js",
      "executable" : "kareljs",
      "maintainer": "lhchavez <lhchavez@omegaup.com>"
    }
  },
  "bin": {
    "kareljs": "./cmd/kareljs"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/omegaup/karel.js.git"
  },
  "bugs": {
    "url": "https://github.com/omegaup/karel.js/issues"
  },
  "author": "omegaUp",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "commander": "^2.9.0",
    "xmldom": "^0.1.22"
  },
  "keywords": [
    "karel"
  ],
  "devDependencies": {
    "electron-builder": "^2.7.2",
    "electron-packager": "^4.0.2",
    "electron-prebuilt": "^0.36.7",
    "grunt": "~0.4.4",
    "grunt-contrib-concat": "~0.2.0",
    "grunt-contrib-jshint": "~0.4.3",
    "grunt-contrib-uglify": "~0.2.0",
    "grunt-jison": "~1.2.1",
    "jison": "~0.4.13"
  }
}
